<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/rawCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:focusable="false"/>

    <TextView
        android:id="@+id/rawTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:gravity="center_horizontal" android:paddingLeft="50dp"/>

    <ImageView
        android:id="@+id/rawImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/book" android:paddingLeft="100dp"/>

</LinearLayout>